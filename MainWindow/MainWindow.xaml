						<Image Source="Resources/VSO_Save_16x.png" Stretch="None" ToolTip="新しいプロジェクトを作成します．"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="名前をつけて保存(_A)"/>
				<Separator/>
				<MenuItem Header="(_A)"/>
				<MenuItem Header="終了(_X)"/>
			</MenuItem>
			<MenuItem Header="編集(_E)">
